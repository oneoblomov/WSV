@model Web.Models.KullaniciView

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Profil</h2>
                </div>
                <div class="card-body">
                    <h4 class="card-title">Kullanıcı Bilgileri</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3">Ad</dt>
                        <dd class="col-sm-9">@Model.Ad</dd>
                        <dt class="col-sm-3">Soyad</dt>
                        <dd class="col-sm-9">@Model.Soyad</dd>
                        <dt class="col-sm-3">Email</dt>
                        <dd class="col-sm-9">@Model.Email</dd>
                        <dt class="col-sm-3">Telefon</dt>
                        <dd class="col-sm-9">@Model.Telefon</dd>
                        <dt class="col-sm-3">Kayıt Tarihi</dt>
                        <dd class="col-sm-9">@Model.KayitTarihi.ToString("dd/MM/yyyy")</dd>
                    </dl>
                </div>
                <div class="card-footer text-end">
                    <form asp-area="" asp-controller="Home" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </button>
                    </form>
                    <a class="btn btn-primary ms-2" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house"></i> Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
    }

    .card-header {
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .card-footer {
        border-bottom-left-radius: 10px;
        border-bottom-right-radius: 10px;
    }
</style>
