<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">
</head>

<body>
    <header>
        @await Html.PartialAsync("partialview/_header.cshtml")
    </header>
    <div class="container">
        <div class="row">
            @if (ViewData["ShowKategori"] != null && (bool)ViewData["ShowKategori"])
            {
                <div class="col-md-10 order-md-1 order-2">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
                <div class="col-md-2 order-md-2 order-1">
                    <button class="btn btn-primary d-md-none mb-3" type="button" data-bs-toggle="collapse"
                        data-bs-target="#kategoriCollapse" aria-expanded="false" aria-controls="kategoriCollapse">
                        Kategoriler
                    </button>
                    <div class="collapse d-md-block" id="kategoriCollapse">
                        @await Component.InvokeAsync("Kategori")
                    </div>
                </div>
            }
            else
            {
                <div>
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            }
        </div>
    </div>
    @if (ViewData["ShowCokSatanlar"] == null)
    {
        <div class="container mt-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Çok Satanlar</h5>
                </div>
                <div class="card-body">
                    @await Component.InvokeAsync("CokSatanlar")
                </div>
            </div>
        </div>
    }

    @await Html.PartialAsync("partialview/_footer.cshtml")

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>